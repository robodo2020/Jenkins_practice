  agent any
  stages {
    stage("build") {
      steps {
          echo 'building the apps...'
      }
    }

    stage("test") {
      steps {
          echo 'testing the apps...'
      }
    }

    stage("deploy") {
      steps {
          echo 'deploying the apps...'
      }
    }
  }
    
}
